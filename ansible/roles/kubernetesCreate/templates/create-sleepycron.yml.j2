apiVersion: batch/v1beta1
kind: CronJob
metadata:
  name: {{ appKubeCreateName }}
spec:
  schedule: "*/2 * * * *"
  jobTemplate:
    spec:
      template:
        spec:
          activeDeadlineSeconds: 10
          containers:
          - name: resting
            image: {{ appKubeCreateImage }}
            command: ["/bin/sleep"]
            args: ["30"]
          restartPolicy: Never

