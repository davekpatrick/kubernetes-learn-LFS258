apiVersion: apps/v1
kind: {{ linkerdVizKubeCreateKind }}
spec:
  template:
    spec:
      containers:
      - args:
        - -linkerd-metrics-api-addr=metrics-api.linkerd-viz.svc.cluster.local:8085
        - -cluster-domain=cluster.local
        - -grafana-addr=grafana.linkerd-viz.svc.cluster.local:3000
        - -controller-namespace=linkerd
        - -viz-namespace={{ linkerdVizKubeCreateNamespace }}
        - -log-level=info
        - -log-format=plain
        - -enforced-host=
        name: {{ linkerdVizKubeCreateName }}